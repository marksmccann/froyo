{
    "name": "froyo",
    "version": "0.0.0",
    "description": "An ultra lightweight framework for build user interfaces",
    "main": "index.js",
    "scripts": {
        "commit": "cz",
        "format": "prettier --write .",
        "lint": "eslint .",
        "setup": "npm i && lerna init",
        "start": "cd docs && npm start",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/marksmccann/froyo.git"
    },
    "keywords": [
        "vanilla",
        "framework",
        "ui",
        "javascript"
    ],
    "author": "Mark McCann <marksmccann@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/marksmccann/froyo/issues"
    },
    "homepage": "https://github.com/marksmccann/froyo#readme",
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.32.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-jest-dom": "^4.0.3",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "lerna": "^6.4.1",
        "prettier": "2.8.3"
    },
    "workspaces": [
        "packages/*",
        "docs"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
