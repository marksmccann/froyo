{
    "name": "froyojs",
    "version": "0.5.0",
    "description": "An ultra lightweight framework for building UI components",
    "main": "dist/lib/index.js",
    "module": "dist/es/index.js",
    "scripts": {
        "build": "run-s clean build:*",
        "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir dist/lib",
        "build:es": "cross-env BABEL_ENV=es babel src --out-dir dist/es",
        "build:umd": "cross-env BABEL_ENV=umd rollup -c --bundleConfigAsCjs",
        "clean": "rimraf dist"
    },
    "author": "Mark McCann <marksmccann@gmail.com>",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/marksmccann/froyo"
    },
    "keywords": [
        "vanilla",
        "framework",
        "ui",
        "component",
        "froyo"
    ],
    "dependencies": {
        "@babel/runtime": "^7.20.7",
        "prop-types": "^15.8.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.20.7",
        "@babel/core": "^7.20.12",
        "@babel/plugin-transform-runtime": "^7.19.6",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.3.0",
        "cross-env": "^7.0.3",
        "npm-run-all": "^4.1.5",
        "rimraf": "^4.1.0",
        "rollup": "^3.10.0",
        "rollup-plugin-filesize": "^9.1.2"
    }
}
