{
    "name": "froyojs",
    "version": "0.2.1",
    "description": "An ultra lightweight framework for building user interfaces",
    "main": "lib/index.js",
    "module": "es/index.js",
    "types": "types.js",
    "scripts": {
        "build": "run-s clean build:*",
        "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir dist/lib --extensions .ts --source-maps",
        "build:es": "cross-env BABEL_ENV=es babel src --out-dir dist/es --extensions .ts --source-maps",
        "build:types": "tsc --module amd --outFile ./dist/types.js --declaration --emitDeclarationOnly",
        "build:umd": "rollup -c --bundleConfigAsCjs",
        "clean": "rimraf dist",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/marksmccann/froyo.git"
    },
    "keywords": [
        "vanilla",
        "framework",
        "ui"
    ],
    "author": "Mark McCann <marksmccann@gmail.com>",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "bugs": {
        "url": "https://github.com/marksmccann/froyo/issues"
    },
    "homepage": "https://github.com/marksmccann/froyo#readme",
    "devDependencies": {
        "@babel/cli": "^7.20.7",
        "@babel/core": "^7.20.12",
        "@babel/plugin-transform-runtime": "^7.19.6",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-replace": "^5.0.2",
        "@rollup/plugin-terser": "^0.4.0",
        "@rollup/plugin-typescript": "^11.0.0",
        "@types/jest": "^29.4.0",
        "@types/prop-types": "^15.7.5",
        "babel-jest": "^29.4.1",
        "cross-env": "^7.0.3",
        "jest": "^29.4.1",
        "jest-environment-jsdom": "^29.4.1",
        "npm-run-all": "^4.1.5",
        "rollup": "^3.12.0",
        "rollup-plugin-filesize": "^9.1.2",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "prop-types": "^15.8.1"
    }
}
